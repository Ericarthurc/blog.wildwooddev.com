<%- include('./includes/head', {title: "Blog - WildwoodTech"}); -%>
<link rel="stylesheet" href="/styles/templates/blogindex.css" />
  </head>
  <body>
    <%- include('./includes/navbar', {path: "/blog"}); -%>
    <div class="blogindex-container">
      <h2 class="blogindex-header">Wildwood Tech Posts</h2>
      <ul class="blogindex-posts">
        <% for (const blog of blogs) { %>
        <li class="blogindex-posts__post">
          -&#160;
          <span
            ><%= blog.date.toLocaleDateString("en-US", { year: "numeric",
            month: "2-digit", day: "2-digit", }); %>&#160;-&#160;</span
          >
          <div>
            <a href="/blog/<%= blog.fileName%>">
              <span class="<%= blog.title === 'New Blog Site!' ? 'new' : '' %>"><%= blog.title %></span></a
            >
          </div>
        </li>
        <% } %>
      </ul>
    </div>
<%- include('./includes/end'); -%>