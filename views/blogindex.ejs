<%- include('./includes/head', {title: "Blog - WildwoodTech"}); -%>
<link rel="stylesheet" href="/styles/templates/blogindex.css" />
  </head>
  <body>
    <%- include('./includes/navbar', {path: "/blog"}); -%>
    <div class="blogindex-container">
      <h2 class="blogindex-header">Wildwood Tech Posts</h2>
      <ul class="blogindex-posts">
        <% for (const blog of blogs) { %>
        <li>
          <a class="<%= blog.title === 'Windows 11' ? 'new' : '' %> blogindex-posts__post" href="/blog/<%= blog.fileName%>">
            <div class="blogindex-post__info">
              <!-- <span class="<%= blog.title === 'New Blog Site!' ? 'new' : '' %>"><%= blog.title %></span> -->
              <span class="blogindex-info__title"><%= blog.title %></span>
              <span class="blogindex-info__date"><%= blog.date.toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric", }); %>
              </span>
            </div>
          </a>
        </li>
        <% } %>
      </ul>
    </div>
<%- include('./includes/end'); -%>